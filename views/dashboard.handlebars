<div class="row">
    <div class="col-auto">
        <h2>Dashboard {{username}}'s !</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <h3>New Post</h3>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">Title</label>
                <input class="form-input" type="text" id="post-title" name="post-title" />
            </div>
            <div class="form-group">
                <label for="post-content">Content</label>
                <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="create-post">Add new post</button>
            </div>
        </form>
    </div>
    {{#if posts.length}}
    <div class="col-md-6 post-list">
        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}/edit">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <span>{{format_date post.date_created}}</span>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
<script src="/public/js/dashboard.js"></script>