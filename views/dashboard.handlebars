<div class="row">
    <div class="col-auto">
        <h2>{{username}}'s Dashboard</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="card text-white bg-info mb-3 new-post col-12 d-none">
        <div class="card-header container">
            <h3>New Post</h3>
        </div>
        <div class="card-body container">
        <form class="form new-post-form">
            <div class="form-group">
            <label for="post-title" class="col-12-row">Title</label>
            <input class="form-input col-12" type="text" id="post-title" name="post-title" />
                </div>
            <div class="form-group">
            <label for="post-content">Content</label>
            <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">                <button type="submit" class="btn btn-info active" id="create-post">Add new post</button>
            </div>
        </form>
        </div>
    </div>
    {{#if posts.length}}
    <div class="col-md-12 post-list">
        {{#each posts as |post|}}
        <div class="row mb-2 border border-info border-4 text-dark p-2 rounded">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}/edit" class="text-dark">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <span>{{format_date post.date_created}}</span>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
    <div class="col-12 justify-content-center d-flex">
        <button id="show-new-post" class="btn btn-info">+ New Post</button>
    </div>
</div>
<script src="/public/js/dashboard.js"></script>